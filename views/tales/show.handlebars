<div class="row">
    <div class="col s12 m8">
        <h3>{{tale.title}}
            <small>
                {{{editIcon tale.user.id user.id tale.id false}}}
            </small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate tale.date 'MMMM Do YYYY'}}</span>
                {{{tale.body}}}
            </div>
        </div>
        {{#if tale.allowComments}}
             <div class="card">
                 <div class="card-content">
                     <span class="card-title">Comments</span>
                 {{#if user}}
                 <form method="post" action="/tales/comment/{{tale.id}}" >
                 <div class="input-field">
                     <textarea name="commentBody" class="materialize-textarea"></textarea>
                     <label>Add comment</label>

                 </div>
                 <input type="submit" value="submit" class="btn btn-outline-primary">
                 </form>

                 {{else}}
                 <p>Please <a href="/auth/google">Login</a>to leave comments</p> <!--Creates a login link to route the user-->
                 {{/if}}
                 </div>
             </div>
             {{#each tale.comments}}
             <div class="card">
                 <div class="card-content">
                     <h5>{{commentBody}}</h5>
                           <div class="chip">
            <img src="{{commentUser.image}}">
             <a href="/tales/user/{{commentUser.id}}">
            {{commentUser.firstName}} {{commentUser.lastName}}
            </a>
          </div>
          <br>
          <small>Posted: {{formatDate commentDate 'MMMM Do YYYY'}}</small>
                 </div>
             </div>
             {{/each}}
        {{/if}}
    </div>
        <div class="col s12 m4">
            <div class="card center-align">
                <div class="card-content">
                    <span class="card-title">
                        {{tale.user.firstName}} {{tale.user.lastName}}
                    </span>
                    <img src="{{tale.user.image}}" class="circle responsive-img" >
                    </div>
<div class="card-action">
    <a href="/tales/user/{{tale.user.id}}">More from {{tale.user.firstName}}</a>
</div>
            </div>
       
    </div>
</div>